<com.yandex.mobile.ads.nativeads.SliderAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slider_ad_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/native_ads_pager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/native_ads_pager_height"
            android:orientation="horizontal" />

    </LinearLayout>

</com.yandex.mobile.ads.nativeads.SliderAdView>